  <div class="card shadow-sm">
    <div class="card-body">
      <h1 class="mb-3"><%= @task.title %></h1>
      <p class="bg-light p-3 rounded border"><%= @task.details %></p>

      <div class="form-check mb-4">
        <%= check_box_tag "completed_#{@task.id}", '1', @task.completed %>
        <%= label_tag "completed_#{@task.id}", "Completed" %>
      </div>

      <div class="d-flex flex-wrap gap-2">
