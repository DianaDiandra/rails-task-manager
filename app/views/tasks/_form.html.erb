<%= form_with model: @task do |f| %>
  <div class='mb-3'>
    <%= f.label :title, class: "form-label fw-bold"%>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class='mb-3'>
    <%= f.label :details, class: "form-label fw-bold" %>
    <%= f.text_field :details, class: "form-control" %>
  </div>
  
  <% if task.persisted? %>
    <div class="form-check mb-3">
      <%= f.label :completed %>
      <%= f.check_box :completed, class: "form-check-label" %>
    </div>
  <% end %>

  <%= f.submit %>
<% end %>

<%= link_to "Back to tasks", tasks_path, class: "d-block mt-3" %>
